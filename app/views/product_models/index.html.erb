<h1>Modelos de Produtos</h1>

<%= link_to 'Cadastrar Novo', new_product_model_path %>
<% if @product_models.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>SKU</th>
        <th>Fornecedor</th>
      </tr>
    </thead>
    <tbody>
      <% @product_models.each do |product_model| %>
        <tr>
          <td><%= product_model.name %></td>
          <td><%= product_model.sku %></td>
          <td><%= product_model.supplier.brand_name %></td>
          <td><%= button_to "Editar", edit_product_model_path(product_model), method: :get, id:"#{dom_id(product_model)}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhum modelo de produto cadastrado.</p>
<% end %>
